#!/bin/bash

grep_umount() {
  mount | grep "${1}" | awk '{ print $3 }' | while read dir; do sudo umount -l $dir; done
}

before_exit() {
  # Unmount network (lazy)
  grep_umount cifs
  grep_umount nfs

  # Kill gpg-agent
  killall gpg-agent

  # Kill kitty dropdown terminal
  kill $( pgrep dropdown-kitty )
}

logout() {
  before_exit
  i3-msg exit
}

reboot() {
  before_exit
  systemctl reboot
}

poweroff() {
  before_exit
  systemctl poweroff
}

suspend() {
  systemctl suspend
}

case $1 in
  logout) logout;;
  reboot) reboot;;
  poweroff) poweroff;;
  suspend) suspend;;
esac
