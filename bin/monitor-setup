#!/usr/bin/env bash

## Setup screens layout. Also takes care of relaunching polybar, reload
## background and other amenities.

list_layouts() {
  ls ~/.config/autorandr
}

main() {
  local layout="${1:-list}"

  if [ "${layout}" == "list" ]; then
    list_layouts
    exit 0
  fi

  if [ "${layout}" == "auto" ]; then
    autorandr -c &>/dev/null </dev/null &
  fi

  if [ "${layout}" == "manual" ]; then
    arandr
  else
    autorandr --load "${layout}" --force &>/dev/null </dev/null &
  fi
}

main $@
