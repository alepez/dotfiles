#!/usr/bin/env bash

CONFIG_FILE="$( realpath ~/.dotfiles-private/dmenu-actions.conf )"

dmenu="$( realpath ~/.dotfiles/bin/dmenu )"

select_option() {
  "${dmenu}" -dmenu -p "Host" "$@"
}

read_conf() {
  cat "${CONFIG_FILE}"
}

list_options() {
  read_conf | sed 's/:.*//'
}

get_command() {
  read_conf | grep -e "^${1}:" | sed 's/[^:]*: //'
}

launch_command() {
  alacritty -e bash -c "${1}"
}

main() {
  opt="$( list_options | select_option "$@" )"

  if [ -z "${opt}" ]; then
    exit 0
  fi

  cmd=$( get_command "${opt}" )

  if [ -z "${opt}" ]; then
    exit 0
  fi

  launch_command "${cmd}"
}

main
