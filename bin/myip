#!/usr/bin/env bash

# This has stopped working when using proton vpn (2026)
fast_dig() {
  local addr=$( dig +short myip.opendns.com @resolver1.opendns.com )
  local location=$( geoiplookup "${addr}" | sed 's/.*: //' )

  echo "{ \"ip\": \"${addr}\", \"location\": \"${location}\" }" | jq
}

fast() {
  local addr=$( curl -s ip.me )
  local location=$( geoiplookup "${addr}" | sed 's/.*: //' )

  echo "{ \"ip\": \"${addr}\", \"location\": \"${location}\" }" | jq
}

pretty() {
  local f=$( mktemp )
  fast > $f
  jq -r '.ip' < $f | tr '\n' ' '
  jq -r '.location' < $f
  rm $f
}

main() {
  case $1 in
    fast) fast;;
    pretty) pretty;;
    *) fast;;
  esac
}

main $@
