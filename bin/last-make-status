#!/usr/bin/env bash
################################################################################
## Show a smile when last make has been successfull
################################################################################

LAST_MAKE_EXIT_CODE_FILENAME=/tmp/last-make-exit-code

if [ ! -e "$( cat ${LAST_MAKE_EXIT_CODE_FILENAME} )" ]; then exit 0; fi

if [ "$( cat ${LAST_MAKE_EXIT_CODE_FILENAME} )" = 0 ]; then
	echo ":)"
else
	echo ":("
fi
