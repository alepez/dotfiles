#!/usr/bin/env bash
################################################################################
## Set performance governor for all cpu
################################################################################

apply_governor() {
  for i in 0 1 2 3 4 5 6 7; do
    echo $1 > /sys/devices/system/cpu/cpu$i/cpufreq/scaling_governor;
  done
}

list_governor() {
  cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_available_governors
}

case $1 in
  ls) list_governor;;
  *) apply_governor $1;;
esac
